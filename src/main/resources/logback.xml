<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <appender name="file" class="ch.qos.logback.core.FileAppender">
        <file>./target/server.log</file>
        <append>true</append>
        <encoder>
            <pattern>%-5p: %d{ISO8601} [%t] %m%n</pattern>
        </encoder>
    </appender>
    <logger name="io.helidon.cors" level="DEBUG"/>
    <logger name="io.helidon.webclient" level="DEBUG"/>
    <logger name="io.helidon.webserver" level="DEBUG"/>
    <root level="DEBUG">
        <appender-ref ref="file"/>
    </root>
</configuration>